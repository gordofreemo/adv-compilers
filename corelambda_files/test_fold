let 
    isNill = abs(x:mu(X.Variant(nil:Unit,ls:Record(x:Nat, xs:X))).
                 case 
                    unfold(mu(X.Variant(nil:Unit,ls:Record(x:Nat, xs:X))), x) 
                 of nil = n => true
                 |  ls  = ls => false
                 esac)
in
    abs(x:mu(X.Variant(nil:Unit,ls:Record(x:Nat, xs:X))) . app(isNill, x))
end